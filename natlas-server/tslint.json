{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": true,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "indent": [true, "tabs", 2],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "arrow-parens": true,
        "trailing-comma": true
    },
    "rulesDirectory": []
}
