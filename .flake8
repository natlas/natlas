[flake8]
# W191 - Tabs over spaces
# E261 - Two spaces before comments
# E117 - Indention levels
# E402 - module level import not at top of file

ignore = W191, E261, E117, E402
max-line-length = 160
exclude =
	# Ignore contents of pycache directories
	__pycache__,
	# Ignore dependencies in virtual environments
	venv,
	# Ignore migrations as they are mostly auto-generated
	migrations,
	# Ignore node_modules for local dev testing
	node_modules
